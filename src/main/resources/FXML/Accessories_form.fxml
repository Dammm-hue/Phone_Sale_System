<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<StackPane maxHeight="600.0" maxWidth="930.0" minHeight="600.0" minWidth="930.0" style="-fx-background-color: #F1F5F9;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Acessories_form_controller">
    <children>
        <BorderPane fx:id="first_pane">
            <top>
                <HBox alignment="CENTER" prefHeight="45.0" style="-fx-background-color: white; -fx-border-color: #E2E8F0; -fx-border-width: 0 0 1 0;">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="30.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label fx:id="lbl_all" onMouseClicked="#click_on_lbl_all" styleClass="sidebar-button" stylesheets="@../CSS/dashboard.css" text="All" />
                                <Label fx:id="lbl_airpod" onMouseClicked="#click_on_lbl_airpod" styleClass="sidebar-button" stylesheets="@../CSS/dashboard.css" text="Airpod" />
                                <Label fx:id="lbl_headphone" onMouseClicked="#click_on_lbl_headphone" styleClass="sidebar-button" stylesheets="@../CSS/dashboard.css" text="Headpone" />
                                <Label fx:id="lbl_powerbank" onMouseClicked="#click_on_lbl_powerbank" styleClass="sidebar-button" stylesheets="@../CSS/dashboard.css" text="PowerBank" />
                                <Label fx:id="lbl_charger" onMouseClicked="#click_on_lbl_charger" styleClass="sidebar-button" stylesheets="@../CSS/dashboard.css" text="Charger" />
                            </children>
                            <padding><Insets left="30.0" /></padding>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <children>
                                <TextField fx:id="txt_search" prefHeight="28.0" prefWidth="180.0" promptText="Search..." style="-fx-background-radius: 15; -fx-background-color: #F8FAFC; -fx-border-color: #CBD5E1; -fx-border-radius: 15;" />
                                <HBox fx:id="hbox" alignment="CENTER" spacing="8.0">
                                    <children>
                                        <Button fx:id="btn_search" onAction="#click_on_btn_search" style="-fx-background-color: #6366F1; -fx-text-fill: white; -fx-background-radius: 15;" />
                                        <Button fx:id="btn_add" onAction="#click_on_btn_add" style="-fx-background-color: #10B981; -fx-text-fill: white; -fx-background-radius: 15;" text="+ Add" />
                                    </children>
                                </HBox>
                            </children>
                            <padding><Insets right="20.0" /></padding>
                        </HBox>
                    </children>
                </HBox>
            </top>
            <center>
                <ScrollPane fx:id="scrollpane" fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
                    <content>
                        <FlowPane fx:id="flowpane" alignment="CENTER_LEFT" hgap="15.0" vgap="15.0">
                            <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
                        </FlowPane>
                    </content>
                </ScrollPane>
            </center>
        </BorderPane>

        <HBox fx:id="add_update_pane" alignment="CENTER" spacing="15.0" style="-fx-background-color: rgba(0,0,0,0.3);">
            <children>
            <VBox fx:id="variable_pane" alignment="CENTER" maxHeight="300.0" maxWidth="250.0" minHeight="250.0" minWidth="250.0" spacing="10.0">
               <children>
                  <HBox alignment="CENTER" maxHeight="40.0" maxWidth="245.0" minHeight="40.0" minWidth="245.0" spacing="12.0" style="-fx-background-color: white; -fx-background-radius: 15;">
                     <children>
                        <Button fx:id="new_cnancle_btn" mnemonicParsing="false" onAction="#new_cnancle_btn_click" />
                        <HBox alignment="CENTER" maxHeight="30.0" style="-fx-border-color: #F1F5F9; -fx-border-width: 0 0 1 0;">
                           <children>
                              <TextField fx:id="color_field1" promptText="Color" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS" />
                              <Button fx:id="color_cancel1" ellipsisString="×" onAction="#color_cancel_clcik" style="-fx-background-color: transparent;" text="×" />
                           </children>
                        </HBox>
                        <Button fx:id="image_select_btn" mnemonicParsing="false" onAction="#image_select_btn_click" />
                        <Button fx:id="add_list_btn" mnemonicParsing="false" onAction="#add_list_btn_click" />
                     </children>
                     <padding>
                        <Insets left="20.0" right="20.0" />
                     </padding>
                  </HBox>
                  <VBox fx:id="list_pane" alignment="TOP_CENTER" maxHeight="200.0" maxWidth="250.0" minHeight="200.0" minWidth="250.0" style="-fx-background-color: white;">
                     <children>
                         <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background-radius: 20; -fx-border-radius: 20;" VBox.vgrow="ALWAYS">
                             <content>
                                 <VBox fx:id="variant_vbox" spacing="10.0" style="-fx-padding: 10;" />
                             </content>
                         </ScrollPane>
                     </children>
                  </VBox>
               </children>
            </VBox>
                <VBox fx:id="add_update_card" alignment="CENTER" maxHeight="300.0" maxWidth="250.0">
                    <effect>
                        <DropShadow blurType="GAUSSIAN" color="#00000033" height="30.0" radius="14.5" width="30.0" />
                    </effect>
                    <children>
                        <StackPane maxHeight="300.0" maxWidth="250.0" VBox.vgrow="ALWAYS">
                            <children>
                                <VBox alignment="CENTER" maxHeight="300.0" maxWidth="250.0">
                                    <children>
                                        <VBox alignment="CENTER" maxHeight="275.0" maxWidth="250.0" style="-fx-background-color: white; -fx-background-radius: 20;" VBox.vgrow="ALWAYS">
                                            <children>
                                                <HBox alignment="CENTER_LEFT">
                                                    <children>
                                                        <Button fx:id="main_cancle_btn" onAction="#main_cancle_click" style="-fx-background-color: transparent;" text="×">
                                                            <font><Font name="System Bold" size="15.0" /></font>
                                                        </Button>
                                                    </children>
                                                </HBox>
                                                <VBox fx:id="for_sapce_pane" alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" spacing="12.0" VBox.vgrow="ALWAYS">
                                                    <children>
                                                        <HBox alignment="CENTER_LEFT" style="-fx-border-color: #E2E8F0; -fx-border-width: 0 0 1 0;">
                                                            <children>
                                                                <TextField fx:id="name_field" promptText="Product Name" style="-fx-background-color: transparent; -fx-font-weight: bold;" HBox.hgrow="ALWAYS" />
                                                                <Button fx:id="name_cancel" onAction="#name_cancel_click" style="-fx-background-color: transparent;" text="×" />
                                                            </children>
                                                        </HBox>
                                                        <HBox alignment="CENTER_LEFT" style="-fx-border-color: #F1F5F9; -fx-border-width: 0 0 1 0;">
                                                            <children>
                                                                <Label minWidth="45.0" text="Price" textFill="#94A3B8" />
                                                                <TextField fx:id="price_field" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS" />
                                                                <Button fx:id="price_cancel" ellipsisString="×" onAction="#price_cancel_click" style="-fx-background-color: transparent;" text="×" />
                                                            </children>
                                                        </HBox>
                                                        <HBox alignment="CENTER_LEFT" style="-fx-border-color: #F1F5F9; -fx-border-width: 0 0 1 0;">
                                                            <children>
                                                                <Label minWidth="45.0" text="Type" textFill="#94A3B8" />
                                                                <ComboBox fx:id="type_combo" prefHeight="26.0" prefWidth="157.0" promptText="Select Type" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS" />
                                                            </children>
                                                        </HBox>
                                                        <HBox fx:id="color_box" alignment="CENTER_LEFT" style="-fx-border-color: #F1F5F9; -fx-border-width: 0 0 1 0;">
                                                            <children>
                                                                <Label minWidth="45.0" text="Color" textFill="#94A3B8" />
                                                                <TextField fx:id="color_field" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS" />
                                                                <Button fx:id="color_cancel" ellipsisString="×" onAction="#color_cancel_clcik" style="-fx-background-color: transparent;" text="×" />
                                                            </children>
                                                        </HBox>
                                                        <Label fx:id="lbl_details_info" onMouseClicked="#click_details_info" style="-fx-cursor: hand; -fx-font-weight: bold; -fx-text-fill: #4F46E5;" text="Details Information" />
                                                  <StackPane alignment="CENTER_LEFT">
                                                      <children>
                                                          <HBox fx:id="update_btns" spacing="10.0">
                                                              <children>
                                                                  <Button fx:id="clear_btn" onAction="#clear_btn_click" prefWidth="100.0" style="-fx-background-color: #F1F5F9; -fx-text-fill: #64748B;" text="Cancel" />
                                                                  <Button fx:id="edit_btn" onAction="#edit_clcik" prefWidth="100.0" style="-fx-background-color: #4F46E5; -fx-text-fill: white;" text="Update" />
                                                              </children>
                                                          </HBox>
                                                          <HBox fx:id="add_btns" spacing="10.0">
                                                              <children>
                                                                  <Button fx:id="cancel_btn" onAction="#cancle_click" prefWidth="100.0" style="-fx-background-color: #10B981;" text="New Item Add" textFill="WHITE" />
                                                                  <Button fx:id="add_pre_btn" onAction="#add_pre_click" prefWidth="100.0" style="-fx-background-color: #4F46E5; -fx-text-fill: white;" text="Save" />
                                                              </children>
                                                          </HBox>
                                                      </children>
                                                  </StackPane>
                                                    </children>
                                                    <padding><Insets bottom="10.0" left="25.0" right="25.0" top="25.0" /></padding>
                                                </VBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>
                                <Rectangle fx:id="product_image" arcHeight="15.0" arcWidth="15.0" fill="#f7f9fa00" height="90.0" onMouseClicked="#choose_image_click" stroke="#e4e9f000" translateY="-140.0" width="90.0" />
                            </children>
                        </StackPane>
                    </children>
                </VBox>

                <VBox fx:id="text_area_pane" alignment="CENTER" maxHeight="300.0" maxWidth="250.0">
                    <children>
                        <VBox maxHeight="250.0" maxWidth="250.0" spacing="12.0" style="-fx-background-color: white; -fx-background-radius: 20;">
                            <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
                            <children>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                                      <Label style="-fx-font-weight: bold; -fx-text-fill: #64748B;" text="Item Description" />
                              <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Button fx:id="delete_text_area" mnemonicParsing="false" onAction="#delete_text_area_click" />
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                                <TextArea fx:id="detail_text_area" promptText="Describe the item details here..." style="-fx-control-inner-background: #F8FAFC; -fx-background-color: transparent;" wrapText="true" VBox.vgrow="ALWAYS" />
                            </children>
                            <effect><DropShadow blurType="GAUSSIAN" color="#0000001a" radius="9.5" width="20.0" /></effect>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</StackPane>
